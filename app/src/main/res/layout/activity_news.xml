<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lighterGray"
        tools:context="com.breakstudio.casadeoracion.NewsActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <ScrollView
                android:id="@+id/mainScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="105dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/listContainer"
                    tools:ignore="HardcodedText">
                    <TextView
                        android:text="DESTACADAS DE LA SEMANA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        android:paddingStart="13dp"
                        android:paddingEnd="13dp"
                        android:id="@+id/tituloDestacados"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/backgroundRadio" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true">
                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/btnFilterBlue"
                            android:onClick="abrirFiltro"
                            android:textColor="@color/backgroundRadio"
                            android:background="@drawable/filtericon_1x"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="20dp"
                            style="@style/closeButton"/>
                    </RelativeLayout>
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rvDestacados"
                        android:layout_below="@+id/tituloDestacados"
                        android:layout_marginTop="0dp">

                    </android.support.v7.widget.RecyclerView>
                    <TextView
                        android:text="ULTIMAS PUBLICACIONES"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        android:paddingStart="13dp"
                        android:paddingEnd="13dp"
                        android:id="@+id/tituloListado"
                        android:textColor="@color/backgroundRadio"
                        android:layout_below="@+id/rvDestacados"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvNews"
                        android:layout_below="@+id/tituloListado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvPredicas"
                        android:layout_below="@+id/tituloListado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvCalendario"
                        android:layout_below="@+id/tituloListado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"/>


                </RelativeLayout>
            </ScrollView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/header_container"
                    android:minHeight="105dp"
                    android:background="@color/backgroundRadio"
                    android:gravity="top">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_marginTop="25dp">
                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="@string/close_string"
                            android:id="@+id/btnCerrar"
                            android:onClick="cerrarListado"
                            android:textColor="@color/backgroundRadio"
                            android:background="@drawable/botton_redondo_blanco"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:fontFamily="sans-serif-light"
                            style="@style/Base.Widget.AppCompat.Button.Borderless"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="25dp">
                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/btnFilter"
                            android:onClick="abrirFiltro"
                            android:textColor="@color/backgroundRadio"
                            android:background="@drawable/filtericonwhite_2x"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="20dp"
                            android:visibility="invisible"
                            style="@style/closeButton"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">
                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/antena"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_below="@+id/imageView5">
                            <TextView
                                android:id="@+id/bienvenido"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Buen dÃ­a"
                                android:textColor="#FFF"/>
                            <TextView
                                android:id="@+id/NombreUsuariotv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ramon"
                                android:textAlignment="center"
                                android:textColor="#FFF"
                                android:layout_marginStart="5dp"/>
                        </LinearLayout>
                    </RelativeLayout>


                </RelativeLayout>
                <Button
                    android:id="@+id/fab_menu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="@dimen/fab_margin_right"
                    android:background="@drawable/menu_boton_redondo"
                    android:scaleType="fitCenter"
                    android:visibility="visible"
                    android:longClickable="false"
                    android:onClick="abrirSettings"/>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="80dp"
        android:maxWidth="80dp"
        android:layout_height="match_parent"
        android:background="#333333"
        android:layout_gravity="end">
        <RelativeLayout
            android:id="@+id/filterContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="24dp"
            android:layout_gravity="center_vertical"
            android:gravity="end">
            <TextView
                android:id="@+id/filtroCerrar"
                android:tag="filtroCerrar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#434142"
                android:text="@string/close_string"
                android:fontFamily="sans-serif-light"
                android:textAlignment="center"
                android:onClick="cerrarFiltro"
                android:textSize="30sp"
                android:gravity="center"
                android:clickable="true"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/filtroNoticias"
                android:tag="filtroNoticias"
                android:onClick="manejarFiltro"
                android:text="Noticias"
                android:layout_below="@id/filtroCerrar"
                android:drawableTop="@drawable/newsiconwhite_1x"
                style="@style/filterButton"/>
            <TextView
                android:id="@+id/filtroImagenes"
                android:tag="filtroImagenes"
                android:onClick="manejarFiltro"
                android:text="Imagenes"
                android:layout_below="@id/filtroNoticias"
                android:drawableTop="@drawable/imagesiconwhite_1x"
                style="@style/filterButton"/>
            <TextView
                android:id="@+id/filtroCalendario"
                android:tag="filtroCalendario"
                android:onClick="manejarFiltro"
                android:text="Calendario"
                android:layout_below="@id/filtroImagenes"
                android:drawableTop="@drawable/calendariconwhite_1x"
                style="@style/filterButton"/>
            <TextView
                android:id="@+id/filtroPredicas"
                android:tag="filtroPredicas"
                android:onClick="manejarFiltro"
                android:text="Predicas"
                android:layout_below="@id/filtroCalendario"
                android:drawableTop="@drawable/bibleiconwhite_1x"
                style="@style/filterButton"/>
            <TextView
                android:id="@+id/filtroVideos"
                android:tag="filtroVideos"
                android:onClick="manejarFiltro"
                android:text="Videos"
                android:layout_below="@id/filtroPredicas"
                android:drawableTop="@drawable/videoiconwhite_1x"
                style="@style/filterButton"/>
        </RelativeLayout>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>

