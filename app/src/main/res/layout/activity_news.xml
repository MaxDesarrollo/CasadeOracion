<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    tools:context="com.breakstudio.casadeoracion.NewsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@color/backgroundRadio"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView4"
            android:contentDescription="Cabecera" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/antena"
            android:id="@+id/imageView5"
            android:layout_marginTop="25dp"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp" />
        <TextView
            android:text="DESTACADAS DE LA SEMANA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:id="@+id/textView3"
            android:layout_below="@+id/imageView4"
            android:layout_alignParentStart="true"
            android:textColor="@color/backgroundRadio" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/rvDestacados"
            android:background="#FFF"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="0dp">

        </android.support.v7.widget.RecyclerView>
        <TextView
            android:text="ULTIMAS PUBLICACIONES"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:id="@+id/textView4"
            android:textColor="@color/backgroundRadio"
            android:layout_below="@+id/rvDestacados"/>
        <ListView
            android:layout_width="match_parent"
            android:id="@+id/lvNews"
            android:layout_below="@+id/textView4"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:background="#2345"
            />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"

            android:layout_marginRight="80dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="270dp"
            android:src="@drawable/santabibliablanco"
            android:elevation="6dp"
            android:id="@+id/fab_predicas"
            app:pressedTranslationZ="12dp"
            app:backgroundTint="@color/fabBack"
            android:visibility="invisible"
            />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="320dp"
            android:src="@drawable/calendarioblanco"
            android:elevation="6dp"
            android:id="@+id/fab_calendario"
            app:pressedTranslationZ="12dp"
            app:backgroundTint="@color/fabBack"
            android:visibility="invisible"
            />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="210dp"
            android:src="@drawable/videosblanco"
            android:elevation="6dp"
            android:id="@+id/fab_videos"
            app:pressedTranslationZ="12dp"
            app:backgroundTint="@color/fabBack"
            android:visibility="invisible"
            />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="150dp"
            android:src="@drawable/imagennegro"
            android:elevation="6dp"
            android:id="@+id/fab_imagenes"
            app:pressedTranslationZ="12dp"
            app:backgroundTint="@color/fabBack"
            android:visibility="invisible"
            />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="32dp"

            android:layout_marginBottom="100dp"
            android:src="@drawable/noticiasblanco"
            android:elevation="6dp"
            android:id="@+id/fab_noticias"
            app:pressedTranslationZ="12dp"
            app:backgroundTint="@color/fabBack"
            android:visibility="invisible"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="210dp"
            android:layout_marginRight="@dimen/fab_margin_right"
            android:elevation="6dp"
            android:longClickable="false"
            android:src="@drawable/menu"
            app:backgroundTint="@color/fabMenu"
            app:pressedTranslationZ="12dp" />

        <!--<Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="800dp"/>-->



    </RelativeLayout>

</ScrollView>





