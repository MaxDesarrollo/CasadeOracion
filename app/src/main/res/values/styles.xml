<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/backgroundRadio</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

    </style>
    <style name="loginButtonStyle">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:width">250dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="closeButton">
        <item name="android:width">30dp</item>
        <item name="android:height">30dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:shadowColor">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
    </style>
    <style name="filterButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>
